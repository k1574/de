CC = cc
LD = $CC

NAME = ic
VERSION = 1.3

ROOT = $HOME/local
BIN = $ROOT/bin
SHR = $ROOT/shr
MAN = $SHR/man

USR = /usr
USRINC = -I$USR/include
USRLIB = -L$USR/lib
CLIB = -lc
DOTINC = -I.

# Additional flags.
ADDCFLAGS = $ADDCFLAGS
ADDLDFLAGS = $ADDLDFLAGS
ADDCPPFLAGS = $ADDCPPFLAGS

LIB = $USRLIB $CLIB
INC = $USRINC $DOTINC

CPPFLAGS = $INC \
	-DVERSION=\"$VERSION\"
CFLAGS = $CPPFLAGS
LDFLAGS = $LIB $LD_STATIC_FLAG

